{
  "workbench.colorTheme": "Dracula Theme",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "jetbrains-mono-nerd-font, 'JetBrains Mono NL', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "terminal.integrated.fontLigatures.enabled": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        // This line should be in italic.
        "scope": [
          "comment.line"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        /* This line should be in bold. */
        "scope": [
          "comment.block"
        ],
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        /** This line should be in italic bold. */
        "scope": [
          "comment.block.documentation"
        ],
        "settings": {
          "fontStyle": "italic bold"
        }
      }
    ]
  },
  "editor.rulers": [160],
  "extensions.ignoreRecommendations": true,
  "editor.minimap.showSlider": "always",
  "telemetry.telemetryLevel": "off",
  "code-runner.enableAppInsights": false,
  "svg.preview.mode": "svg",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/usr/bin/flatpak-spawn",
      "args": ["--host", "--env=TERM=xterm-256color", "bash"]
    },
    "zsh": {
      "path": "/usr/bin/flatpak-spawn",
      "args": ["--host", "--env=TERM=xterm-256color", "zsh"]
    },
    "tmux": {
      "path": "/usr/bin/flatpak-spawn",
      "args": ["--host", "--env=TERM=xterm-256color", "tmux"]
    }
  },
  "mise.binPath": "/home/jasperes/.local/bin/mise",
  "terminal.external.linuxExec": "kitty",
}
